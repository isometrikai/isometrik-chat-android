<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/ism_dp_8"
    app:cardElevation="@dimen/ism_dp_2"
    android:layout_marginTop="@dimen/ism_dp_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPreviewImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_150"
            android:scaleType="centerCrop"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/ism_dp_12"
            android:layout_below="@+id/ivPreviewImage">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPreviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ism_black"
                android:textSize="@dimen/ism_sp_14"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPreviewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ism_message_time_grey"
                android:textSize="@dimen/ism_sp_12"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/ism_dp_4"
                android:visibility="gone"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPreviewUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ism_message_time_grey"
                android:textSize="@dimen/ism_sp_10"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/ism_dp_4"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
