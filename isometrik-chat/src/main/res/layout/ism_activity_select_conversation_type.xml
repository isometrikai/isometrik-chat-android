<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ism_white"
    >
  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/abLayout"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <RelativeLayout
          android:id="@+id/rlPrivateOneToOne"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          >
        <!--  PrivateOneToOne-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_below="@id/ivPrivateOneToOne"
            android:layout_marginStart="@dimen/ism_dp_13"
            android:layout_marginEnd="@dimen/ism_dp_13"
            android:background="@color/ism_line_gray"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPrivateOneToOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/ism_dp_13"
            android:background="@drawable/ism_background_attachment_icons"
            android:padding="@dimen/ism_dp_10"
            app:srcCompat="@drawable/ism_ic_private_onetoone"
            android:visibility="invisible"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrivateOneToOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:paddingStart="@dimen/ism_dp_5"
            android:singleLine="true"
            android:text="@string/ism_new_private_onetoone_conversation"
            android:textColor="@color/ism_black"
            android:textStyle="bold"
            android:gravity="center"
            tools:ignore="RtlSymmetry"
            />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlPrivateGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rlPrivateOneToOne"
          >
        <!--  PrivateGroup-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_below="@id/ivPrivateGroup"
            android:layout_marginStart="@dimen/ism_dp_13"
            android:layout_marginEnd="@dimen/ism_dp_13"
            android:background="@color/ism_line_gray"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPrivateGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/ism_dp_13"
            android:background="@drawable/ism_background_attachment_icons"
            android:padding="@dimen/ism_dp_10"
            app:srcCompat="@drawable/ism_ic_private_group"
            android:visibility="invisible"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrivateGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/ism_dp_5"
            android:singleLine="true"
            android:text="@string/ism_new_private_group_conversation"
            android:textColor="@color/ism_black"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlPublicGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rlPrivateGroup"
          android:visibility="gone"
          >
        <!--  PublicGroup-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_below="@id/ivPublicGroup"
            android:layout_marginEnd="@dimen/ism_dp_13"
            android:layout_marginStart="@dimen/ism_dp_13"
            android:background="@color/ism_line_gray"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPublicGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/ism_dp_13"
            android:background="@drawable/ism_background_attachment_icons"
            android:padding="@dimen/ism_dp_10"
            app:srcCompat="@drawable/ism_ic_public_group"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPublicGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivPublicGroup"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/ism_dp_5"
            android:singleLine="true"
            android:text="@string/ism_new_public_group_conversation"
            android:textColor="@color/ism_black"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlOpen"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rlPublicGroup"
          android:visibility="gone"
          >
        <!--  Open-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_below="@id/ivOpen"
            android:layout_marginEnd="@dimen/ism_dp_13"
            android:layout_marginStart="@dimen/ism_dp_13"
            android:background="@color/ism_line_gray"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/ism_dp_13"
            android:background="@drawable/ism_background_attachment_icons"
            android:padding="@dimen/ism_dp_10"
            app:srcCompat="@drawable/ism_ic_open_chat"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivOpen"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/ism_dp_5"
            android:singleLine="true"
            android:text="@string/ism_new_open_conversation"
            android:textColor="@color/ism_black"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            />
      </RelativeLayout>
    </RelativeLayout>
  </androidx.core.widget.NestedScrollView>
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/abLayout"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      style="@style/ThemeOverlay.AppCompat.ActionBar"
      android:visibility="gone"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ism_white"
        >
      <TextView
          android:id="@+id/tvTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="@string/ism_new_conversation_title"
          android:textColor="@color/ism_title_black"
          android:textSize="@dimen/ism_sp_20"
          />
      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_1"
          android:layout_alignParentBottom="true"
          android:background="@color/ism_line_gray"
          />
      <androidx.appcompat.widget.AppCompatImageButton
          android:id="@+id/ibBack"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentStart="true"
          android:background="@android:color/transparent"
          android:padding="@dimen/ism_dp_16"
          android:tint="@color/ism_text_black"
          app:srcCompat="@drawable/ism_ic_arrow_back"
          />
    </RelativeLayout>
  </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>