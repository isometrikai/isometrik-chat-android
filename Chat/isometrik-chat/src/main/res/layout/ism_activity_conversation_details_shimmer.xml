<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shimmerFrameLayout"
    >
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/rlParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ism_white">

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/abLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/ThemeOverlay.AppCompat.ActionBar"
      android:background="@color/ism_white"
      >
    <com.google.android.material.appbar.CollapsingToolbarLayout
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <RelativeLayout
       app:layout_collapseMode="parallax"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

     <RelativeLayout
         android:id="@+id/rlConversationHeader"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
       <View
           android:layout_width="match_parent"
           android:layout_height="158dp"
           android:background="@drawable/ism_create_conversation_rectangle"
           />
       <androidx.appcompat.widget.AppCompatImageButton
           android:id="@+id/ibBackExpanded"
           android:layout_width="wrap_content"
           android:layout_height="?attr/actionBarSize"
           android:layout_alignParentStart="true"
           android:background="@android:color/transparent"
           android:padding="@dimen/ism_dp_16"
           android:tint="@color/ism_white"
           app:srcCompat="@drawable/ism_ic_arrow_back"
           />
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/ivConversationImage"
           android:layout_width="@dimen/ism_dp_100"
           android:layout_height="@dimen/ism_dp_100"
           android:layout_centerHorizontal="true"
           android:background="@drawable/ism_add_image_background_circle"
           android:padding="@dimen/ism_dp_30"
           android:layout_marginTop="@dimen/ism_dp_81"
           android:elevation="@dimen/ism_dp_5"
           />

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/ivEditConversationImage"
           android:layout_width="@dimen/ism_dp_30"
           android:layout_height="@dimen/ism_dp_30"
           android:layout_toEndOf="@+id/ivConversationImage"
           android:layout_marginStart="@dimen/ism_dp_8"
           android:layout_marginTop="112dp"
           android:background="@color/ism_shimmer_grey"
           />

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/ivRemoveConversationImage"
           android:layout_width="@dimen/ism_dp_30"
           android:layout_height="@dimen/ism_dp_30"
           android:layout_toEndOf="@+id/ivEditConversationImage"
           android:layout_marginStart="@dimen/ism_dp_8"
           android:layout_marginTop="112dp"
           android:background="@color/ism_shimmer_grey"
           />
     </RelativeLayout>

     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/tvConversationTitle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/rlConversationHeader"
         android:textSize="@dimen/ism_sp_20"
         android:layout_marginStart="@dimen/ism_dp_48"
         android:layout_marginEnd="@dimen/ism_dp_48"
         android:layout_marginTop="@dimen/ism_dp_10"
         android:background="@color/ism_shimmer_grey"
         />

     <androidx.appcompat.widget.AppCompatImageView
         android:id="@+id/ivEditConversationTitle"
         android:layout_width="@dimen/ism_dp_30"
         android:layout_height="@dimen/ism_dp_30"
         android:layout_alignParentEnd="true"
         android:layout_below="@+id/rlConversationHeader"
         android:layout_marginEnd="@dimen/ism_dp_13"
         android:padding="@dimen/ism_dp_8"
         android:layout_marginTop="@dimen/ism_dp_8"
         android:background="@color/ism_shimmer_grey"
         />

     <androidx.appcompat.widget.AppCompatTextView
         android:id="@+id/tvCreatedBy"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tvConversationTitle"
         android:layout_marginStart="@dimen/ism_dp_48"
         android:layout_marginEnd="@dimen/ism_dp_48"
         android:layout_marginTop="@dimen/ism_dp_5"
         android:background="@color/ism_shimmer_grey"
         />
   </RelativeLayout>

    </com.google.android.material.appbar.CollapsingToolbarLayout>

  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <RelativeLayout
          android:id="@+id/rlSendMessage"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_48"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:layout_marginEnd="@dimen/ism_dp_8"
          android:layout_marginTop="@dimen/ism_dp_13"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/ism_shimmer_grey"
            />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlSearchInConversation"
          android:layout_below="@+id/rlSendMessage"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_48"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:layout_marginEnd="@dimen/ism_dp_8"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/ism_shimmer_grey"
            />
      </RelativeLayout>

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvParticipantsCount"
          android:layout_width="@dimen/ism_dp_132"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rlSearchInConversation"
          android:layout_marginTop="@dimen/ism_dp_13"
          android:layout_marginBottom="@dimen/ism_dp_13"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:background="@color/ism_shimmer_grey"
          />

      <RelativeLayout
          android:id="@+id/rlAddParticipants"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_48"
          android:layout_below="@+id/tvParticipantsCount"
          >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAddParticipant"
            android:layout_width="@dimen/ism_dp_34"
            android:layout_marginEnd="@dimen/ism_dp_13"
            android:layout_marginStart="@dimen/ism_dp_8"
            android:layout_height="@dimen/ism_dp_34"
            android:padding="@dimen/ism_dp_10"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />

        <TextView
            android:id="@+id/tvAddParticipants"
            android:layout_width="@dimen/ism_dp_100"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ism_dp_16"
            android:paddingStart="@dimen/ism_dp_5"
            android:paddingEnd="@dimen/ism_dp_0"
            android:layout_toEndOf="@+id/ivAddParticipant"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_alignStart="@+id/tvAddParticipants"
            android:layout_alignParentBottom="true"
            android:background="@color/ism_shimmer_grey"
            />
      </RelativeLayout>

      <include
          android:id="@+id/memberOne"
          layout="@layout/ism_conversation_member_item_shimmer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rlAddParticipants"
          />
      <include
          android:id="@+id/memberTwo"
          layout="@layout/ism_conversation_member_item_shimmer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/memberOne"
          />
      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvShowMoreParticipants"
          android:layout_width="@dimen/ism_dp_80"
          android:layout_height="wrap_content"
          android:layout_below="@+id/memberTwo"
          android:layout_marginEnd="@dimen/ism_dp_5"
          android:layout_marginTop="@dimen/ism_dp_5"
          android:layout_alignParentEnd="true"
          android:paddingEnd="@dimen/ism_dp_8"
          android:paddingStart="@dimen/ism_dp_8"
          android:paddingTop="@dimen/ism_dp_8"
          android:background="@color/ism_shimmer_grey"
          />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvConversationGallery"
          android:layout_width="@dimen/ism_dp_100"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvShowMoreParticipants"
          android:layout_marginTop="@dimen/ism_dp_13"
          android:layout_marginBottom="@dimen/ism_dp_13"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:background="@color/ism_shimmer_grey"
          />
      <RelativeLayout
          android:id="@+id/rlGallery"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvConversationGallery"
          >

        <include
            android:id="@+id/mediaOne"
            layout="@layout/ism_gallery_conversation_details_media_item_shimmer"
            android:layout_width="@dimen/ism_dp_160"
            android:layout_height="@dimen/ism_dp_200"
            />
        <include
            android:id="@+id/mediaTwo"
            android:layout_toEndOf="@id/mediaOne"
            layout="@layout/ism_gallery_conversation_details_media_item_shimmer"
            android:layout_width="@dimen/ism_dp_160"
            android:layout_height="@dimen/ism_dp_200"
            />
      </RelativeLayout>

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvShowMoreGallery"
          android:layout_width="@dimen/ism_dp_80"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rlGallery"
          android:layout_marginEnd="@dimen/ism_dp_5"
          android:layout_marginTop="@dimen/ism_dp_5"
          android:paddingEnd="@dimen/ism_dp_8"
          android:paddingStart="@dimen/ism_dp_8"
          android:paddingTop="@dimen/ism_dp_8"
          android:layout_alignParentEnd="true"
          android:background="@color/ism_shimmer_grey"
          />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvConversationSettings"
          android:layout_width="@dimen/ism_dp_100"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvShowMoreGallery"
          android:layout_marginTop="@dimen/ism_dp_13"
          android:layout_marginBottom="@dimen/ism_dp_13"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:background="@color/ism_shimmer_grey"
          />

      <RelativeLayout
          android:id="@+id/rlClearConversation"
          android:layout_below="@+id/tvConversationSettings"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_48"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:layout_marginEnd="@dimen/ism_dp_8"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/ism_shimmer_grey"
            />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlNotifications"
          android:layout_below="@+id/rlClearConversation"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_48"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:layout_marginEnd="@dimen/ism_dp_8"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/ism_shimmer_grey"
            />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rlTypingMessage"
          android:layout_below="@+id/rlNotifications"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_48"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:layout_marginEnd="@dimen/ism_dp_8"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTypingMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/ism_shimmer_grey"
            />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rlDeliveryReadEvents"
          android:layout_below="@+id/rlTypingMessage"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_48"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:layout_marginEnd="@dimen/ism_dp_8"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDeliveryReadEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/ism_shimmer_grey"
            />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rlLeaveConversation"
          android:layout_below="@+id/rlDeliveryReadEvents"
          android:layout_width="match_parent"
          android:layout_height="@dimen/ism_dp_48"
          android:layout_marginStart="@dimen/ism_dp_8"
          android:layout_marginEnd="@dimen/ism_dp_8"
          >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/ism_shimmer_grey"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ism_dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/ism_shimmer_grey"
            />
      </RelativeLayout>

    </RelativeLayout>
  </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.facebook.shimmer.ShimmerFrameLayout>